{
  "id": "quick-note",
  "name": "Quick Note",
  "description": "Capture a short note for later.",
  "version": "1.0.0",
  "inputs": {
    "text": {
      "type": "string",
      "description": "The note contents",
      "required": true
    }
  },
  "steps": [
    {
      "id": "create-note",
      "tool": "notes.create",
      "inputs": {
        "text": "{{inputs.text}}"
      },
      "onError": "halt"
    }
  ],
  "permissions": {
    "notes.create": "write"
  }
}
