{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Command",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "version", "steps"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "version": { "type": "string" },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type"],
        "properties": {
          "type": { "type": "string" },
          "description": { "type": "string" },
          "required": { "type": "boolean" }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "tool", "inputs"],
        "properties": {
          "id": { "type": "string" },
          "tool": { "type": "string" },
          "inputs": { "type": "object" },
          "outputs": { "type": "object" },
          "onError": { "type": "string", "enum": ["halt", "continue"] }
        }
      }
    },
    "permissions": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
