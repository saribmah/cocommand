{
  "manifest_version": 3,
  "name": "Cocommand Browser Bridge",
  "version": "0.1.0",
  "description": "Bridges Chrome browser APIs to the Cocommand desktop app via WebSocket.",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Cocommand",
    "default_popup": "popup.html"
  }
}
